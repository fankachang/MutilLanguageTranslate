{
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 100,
  "chat.promptFilesRecommendations": {
    "speckit.constitution": true,
    "speckit.specify": true,
    "speckit.plan": true,
    "speckit.tasks": true,
    "speckit.implement": true
  },
  "chat.tools.terminal.autoApprove": {
    ".specify/scripts/bash/": true,
    ".specify/scripts/powershell/": true
  },
  "files.encoding": "utf8", // 檔案用UTF-8編碼
  "files.autoSave": "afterDelay", // 自動儲存檔案
  "files.autoSaveDelay": 1000, // 延遲1秒後自動儲存
  "files.trimTrailingWhitespace": true, // 儲存時自動過濾多餘空格
  "editor.formatOnSave": true, // 儲存時自動格式化程式碼
  "python-env.workspaceSearchPaths": [
    "./.venv",
    "./venv",
    "./env",
    "./.env"
  ],
  "python.pythonPath": ".venv/Scripts/python.exe", // 指定Python解譯器路徑
  "python.analysis.typeCheckingMode": "basic", // 啟用基本的型別檢查
  "python.terminal.activateEnvironment": true, // 在終端機中自動啟用Python虛擬環境
  "python.linting.enabled": true, // 啟用Python程式碼檢查"
  "python.linting.pylintEnabled": true // 啟用Pylint檢查
}